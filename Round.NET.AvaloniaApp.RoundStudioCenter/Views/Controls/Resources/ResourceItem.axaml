<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:fluentIcons="clr-namespace:FluentAvalonia.FluentIcons;assembly=FluentAvalonia.FluentIcons"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Round.NET.AvaloniaApp.RoundStudioCenter.Views.Controls.Resources.ResourceItem">
    <DockPanel LastChildFill="True">
        <DockPanel DockPanel.Dock="Right" HorizontalAlignment="Right" Margin="10">
            <Button Margin="0,0,10,0" Click="Button_Click">
                <DockPanel>
                    <fluentIcons:FluentIcon Width="15" Height="15" Icon="Link20Regular" />
                    <Label>详情</Label>
                </DockPanel>
            </Button>
        </DockPanel>
        <Border Margin="8" CornerRadius="6" DockPanel.Dock="Left" Width="56" Height="56" HorizontalAlignment="Left" Name="AssetsIcon">
            <fluentIcons:FluentIcon Icon="Grid20Regular" Width="40" Height="40"/>
        </Border>
        <StackPanel Margin="8" HorizontalAlignment="Left" VerticalAlignment="Center">
            <TextBlock FontSize="16" FontWeight="Bold" Name="AssetsName">Name</TextBlock>
            <TextBlock Name="AssetsProfile">AssetsProfile</TextBlock>
        </StackPanel>
    </DockPanel>
</UserControl>
